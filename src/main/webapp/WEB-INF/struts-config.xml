<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "dtds/struts-config_1_3.dtd">
<struts-config>

	<form-beans>
		<form-bean name="infoDisplayFormModel" type="org.pan.oauth.struts.InfoDisplayModel" />
	</form-beans>

	<action-mappings>
		<action path="/callbackTwitter" type="org.pan.oauth.struts.GoogleCallbackAction"
			name="infoDisplayFormModel" scope="request">
			<forward name="success" path="/infoDisplay.jsp"></forward>
		</action>

		<action path="/callbackOpenid" type="org.pan.oauth.struts.TwitterCallbackAction"
			name="infoDisplayFormModel" scope="request">
			<forward name="success" path="/infoDisplay.jsp"></forward>
		</action>

		<action input="/index.jsp" parameter="method" path="/UserAction"
			scope="session" type="org.pan.oauth.struts.UserAction" name="infoDisplayFormModel">
			<forward name="success" path="/index.jsp" />
		</action>
	</action-mappings>
</struts-config>